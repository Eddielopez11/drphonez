

<div class="grid">
  <div class="macz-main-section">
    <div class="text-wrapper">
      <p class="macz-banner-p"></p>
      <p class="macz-main-header">{{ page.title }}</p>
      <p class="macz-main-p"></p>
    </div>
  </div>
  <div class="wrapper-custom">
    <div class="grid__item large--nine-twelfths push--large--one-twelfth medium-down--eleven-twelfths grid-nopadding">
      <div class="grid-uniform collections-wrapper flex-wrapper">

        {% for collection in collections %}
            <div class="grid__item large--one-quarter medium-down--one-half">

            {% if collection.tag contains page.title %}
              <a href="{{collection.url}}" class="grid__image">
                <img class="repairs-img" src="{{collection | img_url: 'large'}}" alt="">
                <h4 class="text-center">{{collection.title}}</h4>
              </a>
            {% endif %}

            </div>
        {% endfor %}

      </div>
    </div>
  </div>
</div>
